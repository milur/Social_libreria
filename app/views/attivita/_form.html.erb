<%= form_for(@attivitum) do |f| %>
  <% if @attivitum.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@attivitum.errors.count, "error") %> prohibited this attivitum from being saved:</h2>

      <ul>
      <% @attivitum.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
   <div class="field">
    <%= f.label :data %><br />
    <%= f.text_field :data %>
  </div>
  <div class="field">
    <%= f.label :descrizione %><br />
    <%= f.text_area :descrizione %>
  </div>
  
  <div class="field">
  	<%= f.label "vuoi condividere" %><br />
  	<% current_user.gruppi.each do |g|%>
  	    <%= g.nome %>
  	    <%= g.calendario %>
  	    <%= check_box_tag "gruppi_ids[]", Calendario.find_by_gruppo_id(g.id).id  %>
  	<% end %>
  </div>
  
  <div class="field">
    <%= f.label :allegato_id %><br />
    <%= f.number_field :allegato_id %>
  </div>
  <div class="field">
    <%= f.label :utente_id %><br />
    <%= f.number_field :utente_id %>
  </div>
 
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<div id="articles">
  <h2 id="month">
    <%= link_to "<", date: date.prev_month %>
    <%= date.strftime("%B %Y") %>
    <%= link_to ">", date: date.next_month %>
  </h2>
	  <%= calendar date do |date| %>
		  <% if !attivita.present? %>
		      
			   <%= link_to date.day , :controller => "calendari", 
			                          :action => "show_day",
			                          :date_day => Date.parse(date.to_s).strftime('%Y-%m-%d') %>
			 
		 <%end%>
		  <% if attivita.present? %>
		  
		       <% if !attivita[date]%>
			   <%= link_to date.day , :controller => "calendari", 
			                          :action => "show_day",
			                          :date_day => Date.parse(date.to_s).strftime('%Y-%m-%d') %>
			   <%end%>
			   
		 <%end%>	   
		                           
		                           
	   <% if attivita.present? %>
	      <% if attivita[date]%>
	      <%= link_to date.day , :controller => "calendari", 
	                             :action => "show_day",
	                             :date_day => Date.parse(date.to_s).strftime('%Y-%m-%d'),
	                             :attivita => attivita[date]%>
	      <ul>
	        attivita nuove:<%= attivita[date].uniq.count %>
	      <%end%>
	     </ul>
	      
	     <% end %>    
		    
	 <% end %>
    
   

</div>
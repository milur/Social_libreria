<%= form_for (@commento = Commento.new) do |f| %>
   <%= f.hidden_field :attivitum_id ,:value => attivitum_id %>
   <%= f.hidden_field :utente_id , :value => utente_id %>
  <p>
    <%= f.label :testo, "vuoi commentare  #{current_user.nome}?" %><br />
    <%= f.text_area :testo, :rows => '2', :cols => 35 %>
  </p>
  <p><%= f.submit %></p>
<% end %>
